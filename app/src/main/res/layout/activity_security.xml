<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Security"
    android:background="#F5F5F5">

    <!-- Header Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_top"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        app:cardCornerRadius="28dp"
        app:cardBackgroundColor="#1a7a1a"
        android:layout_marginTop="-20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="bottom"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="15dp"
            android:text="Sercurity" />
    </androidx.cardview.widget.CardView>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/card_top"
        android:layout_marginTop="16dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="25sp"
                android:background="@color/background_color">
                <TextView
                    android:id="@+id/tv_edit_profile_insecurity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:textStyle="normal"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:onClick="onclick"
                    android:drawablePadding="30sp"
                    android:drawableStart="@drawable/persion_icon"
                    android:fontFamily="sans-serif-medium"/>
                <TextView
                    android:id="@+id/tv_change_password_in_security"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Change Password"
                    android:textStyle="normal"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:drawablePadding="30sp"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="60dp"
                    android:drawableStart="@drawable/security_icon"
                    android:fontFamily="sans-serif-medium"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Face authentication"
                    android:textStyle="normal"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:paddingLeft="15dp"
                    android:drawablePadding="30sp"
                    android:layout_marginTop="110dp"
                    android:drawableStart="@drawable/privacy_icon"
                    android:fontFamily="sans-serif-medium"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>